<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                用户管理
                <small>详情</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> <a href="/">控制台</a>
                </li>
                <li class="active">
                    <i class="fa fa-user-plus"></i> <a href="/admin/manage">用户管理</a>
                </li>
                <li class="active">
                    <i class="fa fa-address-card" aria-hidden="true"></i> 用户详情
                </li>
            </ol>
        </div>
    </div>
    <!-- /. Page Heading -->


    <!-- Alert -->
    {{#if success_msg}}
    <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <i class="fa fa-check" aria-hidden="true"></i> {{success_msg}}
    </div>
    {{/if}} {{#if error_msg}}
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <i class="fa fa-close" aria-hidden="true"></i> {{error_msg}}
    </div>
    {{/if}} {{#if error}}
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <i class="fa fa-close" aria-hidden="true"></i> {{error}}
    </div>
    {{/if}}
    <!-- /.alert -->

    <div class="row">
        <div class="col-sm-12">
            <div id="manage-user-info" class="list-group">
                <li class="list-group-item">
                    <h4 class="list-group-item-heading">
                        <i class="fa fa-address-card-o" aria-hidden="true"></i> {{aUser.username}}
                        <span class="list-group-item-heading-right">
                        <span class="btn btn-xs btn-{{aUser.buttonTypeAppnum}}">{{aUser.applist.length}}个APP</span>
                        <span class="btn btn-xs btn-success" data-toggle="collapse" data-target="#user-app-add"><i class="fa fa-plus" aria-hidden="true"></i> 添加</span>
                        <span id="{{aUser._id}}" status-code="{{aUser.activation}}" class="btn btn-xs btn-{{aUser.buttonTypeActivate}} btn-active-status">{{aUser.active}}</span>
                        </span>
                    </h4>

                    <div class="list-group-item-detail list-group-item-detail-single">
                        <div id="user-app-add" class="collapse">
                            <!--添加列表在这里-->
                            <form method="post" id="appkeySelected" action="/admin/manage/api/addapp" role="form">
                                <table class="table table-bordered table-hover" id = "appselectedtable">
                                    <thead>
                                    <tr>
                                        <th></th>
                                        <th>AppKey</th>
										<th>Name</th>
										<th>Robot</th>
                                        <th hidden="hidden">AppSecret</th>
                                        <th hidden="hidden">Id</th>
                                    </tr>
                                    </thead>
                                    <tbody id = "inforslist">
                                    </tbody>
                                </table>
                                <input type="hidden" name="id" value="{{aUser._id}}">
                                <button type="submit" class="btn btn-default">添加</button>
                            </form>
                        </div>

                        <h1 class="page-header">
                            <small>当前APP接入信息</small>
                        </h1>
                        {{#if aUser.appkey}}
                        <div class="alert alert-success user-app-list-item-current">
                            <p>
                                <strong>APPKEY: </strong> <span class="user-app-list-data">{{aUser.appkey}}</span>
                                <br>
                                <strong>APPSECRET: </strong> <span class="user-app-list-data">{{aUser.appsecret}}</span>
                            </p>
                        </div>
                        {{else}}
                        <div class="alert alert-danger user-app-list-item-current">
                            <p>
                                当前用户没有在使用任何APP。
                            </p>
                        </div>
                        {{/if}}

                        <h1 class="page-header">
                            <small>可选APP列表</small>
                        </h1>
                        <div class="list-group-item-apps">
                            {{#each aUser.applist}}
                            <div class="alert alert-info user-app-list-item">
                                <p>
                                    <strong>APPKEY: </strong> <span class="user-app-list-data">{{this.appkey}}</span>
                                    <br>
                                    <strong>APPSECRET: </strong> <span class="user-app-list-data">{{this.appsecret}}</span>
                                </p>
                                <div class="user-app-list-item-right">
                                    <a href="/admin/manage/api/removeapp?appkey={{this.appkey}}" class="user-app-list-item-remove"><i class="fa fa-times fa-4x" aria-hidden="true"></i></a>
                                </div>
                            </div>{{/each}}
                        </div>

                        <h1 class="page-header">
                            <small>用户基本信息</small>
                        </h1>
                        <div class="list-group-item-text">
                            <div id="user-$_id$" class="qw-users-list">
                                <hr>
                                <p>数据库ID：<span class="list-group-item-text-data">{{aUser._id}}</span></p>
                                <hr>
                                <p>用户名： <span class="list-group-item-text-data">{{aUser.username}}</span></p>
                                <hr>
                                <p>组别： <span class="list-group-item-text-data">{{user_groupname}}</span></p>
                                <hr>
                                <p>激活状态： <span class="list-group-item-text-data">{{aUser.active}}</span></p>
                                <hr>
                                <p>姓名： <span class="list-group-item-text-data">{{aUser.name}}</span></p>
                                <hr>
                                <p>公司： <span class="list-group-item-text-data">{{aUser.company}}</span></p>
                                <hr>
                                <p>电子邮箱： <span class="list-group-item-text-data">{{aUser.email}}</span></p>
                                <hr>
                                <p>手机号： <span class="list-group-item-text-data">{{aUser.phone}}</span></p>
                                <hr>
                                <p>微信ID： <span class="list-group-item-text-data">{{aUser.wechat_openid}}</span></p>
                                <hr>
                                <p>短信提醒： <span class="list-group-item-text-data">{{aUser.alertSms}}</span></p>
                                <hr>
                                <p>邮件提醒： <span class="list-group-item-text-data">{{aUser.alertEmail}}</span></p>
                                <hr>
                                <p>APPKEY： <span class="list-group-item-text-data">{{aUser.appkey}}</span></p>
                                <hr>
                                <p>APPSECRET： <span class="list-group-item-text-data">{{aUser.appsecret}}</span></p>
                                <hr>
                                <p>重置密码： <span class="list-group-item-text-data"><span id="pwd_span"></span><button id="pwd_btn" type="button" class="btn">重置密码</button></span></p>
                                <hr>
                            </div>
                        </div>
                    </div>
                </li>
            </div>
        </div>

        <div style="display: none">
            <div id="user-id">{{aUser._id}}</div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->